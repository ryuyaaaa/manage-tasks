<table class="table table-hover">
    <thead>
      <tr>
        <th>番号</th>
        <th>タイトル</th>
        <th>〆切日時</th>
        <th>作成日時</th>
      </tr>
    </thead>

    <tbody>
        <% @tasks.each do |task| %>
            <tr>
            <th scope="row"><%= task.id %></th>
            <td><strong><%= task.title %></strong></td>
            <td><%= task.deadline %></td>
            <td><%= task.created_at %></td>
            <td>
                <%= link_to '編集', "/tasks/#{task.id}", method: :get, class: "edit btn btn-outline-success" %>
                <%= link_to '削除', "/tasks/#{task.id}", method: :delete, class: "delete btn btn-outline-danger" %>   
            </td>
            </tr>
        <% end %>
    </tbody>
</table>