<div class="container">
    <div class="row radius">
        <div class="col-lg-12 col-sm-12">
            <h3>編集する</h3>

            <%= form_tag("/tasks/#{@task.id}", method: :patch) do %>
            <div class="form-group row category">
                <label for="example-text-input" class="col-2 col-form-label">タスク名：</label>
                <div class="col-10">
                    <input class="form-control" type="text" name="title" placeholder=<%= @task.title %> id="example-text-input">
                </div>
            </div>
            <div class="form-group row category">
                <label for="example-datetime-local-input" class="col-2 col-form-label">〆切日時：</label>
                <div class="col-10">
                    <input class="form-control" type="datetime-local" name="deadline" id="example-datetime-local-input">
                </div>
            </div>
            <div class="make-new-task">
                <input type="submit" value="編集">
            </div>
            <% end %>   
        </div>
    </div>
</div>